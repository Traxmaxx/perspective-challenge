{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "es2024",
    "types": [
      "node", "jest"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
     "src/setupTestEnv.d.ts",
     "test",
     "dist"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
