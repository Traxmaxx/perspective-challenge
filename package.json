{
  "name": "backend-test",
  "version": "1.0.0",
  "description": "Basic setup to for the backend engineer test",
  "main": "/src/index.ts",
  "type": "module",
  "bugs": {
    "url": "https://github.com/traxmaxx/reponame/issues"
  },
  "homepage": "https://github.com/traxmaxx/reponame/#readme",
  "scripts": {
    "build": "tsc",
    "start": "./node_modules/.bin/dotenvx run -- node --require @opentelemetry/auto-instrumentations-node/register dist/index.js",
    "startBundledDev": "NODE_ENV=development node dist/index.js",
    "dev": "NODE_ENV=development nodemon --exec 'node --no-warnings=ExperimentalWarning --loader ts-node/esm' src/index.ts",
    "lint": "eslint -c eslint.config.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test-ci": "NODE_OPTIONS=--experimental-vm-modules jest -c jest.config.js --ci --runInBand --silent"
  },
  "author": "Christoph Fey",
  "license": "ISC",
  "mikro-orm": {
    "useTsNode": true
  },
  "dependencies": {
    "@mikro-orm/core": "^6.4.16",
    "@mikro-orm/migrations": "^6.4.16",
    "@mikro-orm/reflection": "^6.4.16",
    "@mikro-orm/seeder": "^6.4.16",
    "@mikro-orm/sqlite": "^6.4.16",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-dist": "^5.22.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.16",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
